<center>
  <%= form_tag merchant_discounts_path, method: :post  do %>
    <%= label_tag :name %>
    <%= text_field_tag :name, "#{@discount.name}"%>

    <%= label_tag :percent %>
    <%= number_field_tag :percent, "#{@discount.percent}" %>

    <%= label_tag :item_count %>
    <%= number_field_tag :item_count, "#{@discount.item_count}" %>

    <%= submit_tag 'Create Discount' %>
  <% end %>
</center>
